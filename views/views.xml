<!-- <?xml version="1.0" encoding="utf-8"?> -->
<odoo>

<!-- Membuat View Search Course -->
 
<record id="training_course_view_search" model="ir.ui.view">
    <field name="name">training.course.search</field>
    <field name="model">training.course</field>
    <field name="arch" type="xml">
        <search string="Search Course">
            <field name="name" string="Kursus" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
            <field name="user_id"/>
            <filter name="my_courses" string="Kursus Saya" domain="[('user_id', '=', uid)]"/>
            <group string="Group By">
                <filter name="responsible" string="Penanggung Jawab" context="{'group_by': 'user_id'}"/>
            </group>
            <searchpanel>
                <field name="level" icon="fa-signal" enable_counters="1"/>
            </searchpanel>
        </search>
    </field>
</record>

<!-- Membuat View List Course -->
 
<record id="training_course_view_list" model="ir.ui.view">
    <field name="name">training.course.list</field>
    <field name="model">training.course</field>
    <field name="arch" type="xml">
        <list string="Course List">
            <field name="ref"/>
            <field name="name"/>
            <field name="user_id"/>
            <field name="level"/>
            <field name="description"/>
        </list>
    </field>
</record>
 
<!-- Membuat View Form Course -->
 
<record id="training_course_view_form" model="ir.ui.view">
    <field name="name">training.course.form</field>
    <field name="model">training.course</field>
    <field name="arch" type="xml">
        <form string="Course Form">
            <header>
                <button name="action_print_course" type="object" string="Print Course" class="oe_highlight"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="ref"/>
                    </h1>
                </div>
                <group string="Informasi">
                    <group>
                        <field name="name"/>
                        <field name="level" widget="radio"/>
                    </group>
                    <group>
                        <field name="color"/>
                    </group>
                </group>
                <group>
                    <separator string="Koordinator"/>
                    <field name="user_id"/>
                    <separator string="Login"/>
                    <field name="email" password="1"/>
                </group>
                <notebook>
                    <page string="Sesi">
                        <group>
                            <field name="session_line" mode="list,kanban" nolabel="1" colspan="2">
                                <list string="Sesi" editable="top">
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="start_date"/>
                                    <field name="duration"/>
                                    <field name="seats"/>
                                    <field name="state"/>
                                </list>
                                <form string='Sesi'>
                                    <group>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="start_date"/>
                                        <field name="duration"/>
                                        <field name="seats"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </page>
                    <page string="Cindera Mata">
                        <group>
                            <field name="product_ids" nolabel="1" colspan="2"/>
                        </group>
                    </page>
                    <page string="Keterangan">
                        <group>
                            <field name="description"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <chatter/>
        </form>
    </field>
</record>

<!-- Membuat View Activity Course -->
 
<record id="training_course_view_activity" model="ir.ui.view">
    <field name="name">training.course.activity</field>
    <field name="model">training.course</field>
    <field name="arch" type="xml">
        <activity string="Course">
            <field name="id"/>
            <templates>
                <div t-name="activity-box">
                    <div>
                        <field name="name" display="full"/>
                        <field name="user_id" muted="1" display="full"/>
                    </div>
                </div>
            </templates>
        </activity>
    </field>
</record>

<!-- Membuat View List Session -->

<record id="training_session_view_list" model="ir.ui.view">
    <field name="name">training.session.list</field>
    <field name="model">training.session</field>
    <field name="arch" type="xml">
        <list string="session List" multi_edit="1" expand="1" default_order="start_date desc" delete="0" decoration-info="duration&lt;=5" decoration-danger="duration&gt;=15">
            <field name="course_id"/>
            <field name="name"/>
            <field name="partner_id" optional="show"/>
            <field name="start_date" string="Tanggal Mulai"/>
            <field name="end_date"/>
            <field name="duration" avg="Rata-Rata Durasi"/>
            <field name="seats" sum="Total Kursi"/>
            <field name="taken_seats" widget="progressbar" optional="hide"/>
            <field name="state"/>
        </list>
    </field>
</record>
 
<!-- Membuat View Form Session -->
 
<record id="training_session_view_form" model="ir.ui.view">
    <field name="name">training.session.form</field>
    <field name="model">training.session</field>
    <field name="arch" type="xml">
        <form string="Session Form">
            <header>
                <button name="action_print_session" type="object" string="Print Session" invisible="state != 'open'" class="oe_highlight"/>
                <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'" groups="training_odoo.group_training_manager" class="btn-primary"/>
                <button name="action_cancel" type="object" string="Cancel" invisible="state != 'open'"/>
                <button name="action_close" type="object" string="Close" invisible="state != 'open'" groups="training_odoo.group_training_manager" class="oe_highlight"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
            </header>
            <sheet>
                <group>
                    <group string="Informasi">
                        <field name="course_id" readonly="state != 'draft'" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        <field name="name" readonly="state != 'draft'" placeholder="Contoh: Introduction"/>
                        <field name="partner_id" readonly="state != 'draft'"/>
                    </group>
                    <group string="Jadwal">
                        <field name="start_date" readonly="state != 'draft'" string="Tanggal Mulai"/>
                        <field name="end_date" readonly="state != 'draft'"/>
                        <field name="duration" readonly="state != 'draft'"/>
                    </group>
                </group>
                <group string="">
                    <group>
                        <field name="seats" readonly="state != 'draft'"/>
                        <field name="taken_seats" widget="progressbar"/>
                    </group>
                    <group>
                        <field name="attendees_count"/>
                    </group>
                </group>
                <group string="Peserta">
                    <field name="attendee_ids" readonly="state != 'draft'" nolabel="1" colspan="2"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<!-- Membuat View List Attendee -->
 
<record id="training_attendee_view_list" model="ir.ui.view">
    <field name="name">training.attendee.list</field>
    <field name="model">training.attendee</field>
    <field name="arch" type="xml">
        <list string="Attendee List">
            <field name="name" string='Nama'/>
            <field name="email"/>
            <field name="sex"/>
        </list>
    </field>
</record>
 
<!-- Membuat View Form Attendee -->
 
<record id="training_attendee_view_form" model="ir.ui.view">
    <field name="name">training.attendee.form</field>
    <field name="model">training.attendee</field>
    <field name="arch" type="xml">
        <form string="Attendee Form">
            <sheet>
                <group>
                    <group>
                        <field name="name" string='Nama'/>
                        <field name="sex" widget="radio"/>
                    </group>
                    <group>
                        <field name="email"/>
                        <field name="marital"/>
                    </group>
                </group>
                <group string="Sesi">
                    <field name="session_ids" nolabel="1" colspan="2"/>
                </group>
            </sheet>
        </form>
    </field>
</record>


<!-- Membuat View Calendar Session -->
 
<record id="training_session_view_form_calendar" model="ir.ui.view">
    <field name="name">training.session.calendar</field>
    <field name="model">training.session</field>
    <field name="arch" type="xml">
        <calendar string="Session Calendar" create="0" date_start="start_date" date_stop="end_date" mode="month" color="partner_id">
            <field name="name" invisible="1"/>
            <field name="partner_id" filters="1"/>
            <field name="course_id" filters="1" color="color"/>
        </calendar>
    </field>
</record>

<!-- Membuat View Graph Session -->
 
<record id="training_session_view_graph" model="ir.ui.view">
    <field name="name">training.session.graph</field>
    <field name="model">training.session</field>
    <field name="arch" type="xml">
        <graph string="Session" sample="1" stacked="False" type="pie" order="desc">
            <field name="course_id"/>
            <field name="partner_id"/>
            <field name="start_date" interval="week"/>
            <field name="attendees_count" type="measure"/>
        </graph>
    </field>
</record>

<!-- Membuat View Pivot Session -->
 
<record id="training_session_pivot_view" model="ir.ui.view">
    <field name="name">training.session.pivot</field>
    <field name="model">training.session</field>
    <field name="arch" type="xml">
        <pivot string="Pivot" sample="1" disable_linking="True" display_quantity="true">
            <field name="start_date" type="row"/>
            <field name="course_id" type="col"/>
            <field name="attendees_count" type="measure"/>
        </pivot>
    </field>
</record>

<!-- Membuat View Kanban Session -->
 
<record id="training_session_kanban_view" model="ir.ui.view">
    <field name="name">training.session.kanban</field>
    <field name="model">training.session</field>
    <field name="arch" type="xml">
        <kanban highlight_color="color" default_group_by="course_id" class="o_kanban_small_column o_opportunity_kanban" sample="1">
            <field name="course_id"/>
            <field name="name"/>
            <field name="partner_id"/>
            <field name="duration"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="level"/>
            <field name="color"/>
            <field name="state"/>
            <field name="attendees_count"/>
            <progressbar field="state" colors='{"open": "success", "open": "warning", "draft": "danger"}' sum_field="attendees_count"/>
            <templates>
                <t t-name="menu">
                    <t t-if="widget.editable">
                        <a role="menuitem" type="open" class="dropdown-item">Edit</a>
                    </t>
                    <t t-if="widget.deletable">
                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <field name="color" widget="kanban_color_picker"/>
                </t>
                <t t-name="card">
                    <field class="fw-bold fs-5" name="name"/>
                    <field name="partner_id" class="fw-bold fs-5"/>
                    <field name="level" widget="label_selection" options="{'classes': {'basic': 'warning', 'advanced': 'success'}}"/>
                    <footer class="pt-1">
                        <field name="start_date"/>
                        <b>s/d</b>
                        <field name="end_date"/>
                        <field name="partner_id" widget="many2one_avatar_user" class="ms-auto"/>
                    </footer>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <!-- Membuat Action/ Event Course -->
    <record id="training_course_action" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">list,form,activity</field>
        <field name="help" type="html">
          <p name="o_view_nocontent_smiling_face">
            Buatlah kursus pertamamu ....
          </p>
        </field>
    </record>

<!-- Membuat Action/Event Session -->
 
<record id="training_session_action" model="ir.actions.act_window">
    <field name="name">Session</field>
    <field name="res_model">training.session</field>
    <field name="view_mode">list,form,calendar,graph,pivot,kanban</field>
</record>

<!-- Membuat Action/Event Attendee -->
 
<record id="training_attendee_action" model="ir.actions.act_window">
    <field name="name">Attendee</field>
    <field name="res_model">training.attendee</field>
    <field name="view_mode">list,form</field>
</record>


<!-- Membuat Data Dummy Activity Type -->
 
<record id="mail_activity_data_penawaran" model="mail.activity.type">
    <field name="name">Kirim Penawaran</field>
    <field name="icon">fa-envelope</field>
    <field name="res_model">training.course</field>
</record>
 
<record id="mail_activity_data_harga" model="mail.activity.type">
    <field name="name">Negosiasi Harga</field>
    <field name="icon">fa-users</field>
    <field name="res_model">training.course</field>
</record>


